<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/primary"
    android:layout_height="match_parent"

    tools:context="hr.foi.hontic.ivan.watch4bpm.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scrollbars="none"


        app:layout_box="right|left">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_box="all">


            <Button
                android:id="@+id/bpmMeasureNowButton"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_corners"
                android:onClick="openMeasureNow"
                android:text="@string/measureNowButton"
                android:textColor="@color/primary_text" />

            <Button
                android:id="@+id/bpmServiceButton"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_below="@id/bpmMeasureNowButton"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="15dp"
                android:background="@drawable/button_corners"
                android:onClick="setBPMServiceState"
                android:text=""
                android:textColor="@color/primary_text" />

            <Button
                android:id="@+id/statisticButton"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_below="@id/bpmServiceButton"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="15dp"
                android:background="@drawable/button_corners"
                android:onClick="openStatistics"
                android:text="@string/statisticButton"
                android:textColor="@color/primary_text" />


            <Button
                android:id="@+id/openPhoneAppButton"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_below="@id/statisticButton"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="15dp"
                android:background="@drawable/button_corners"
                android:onClick="openPhoneApp"
                android:text="@string/openPhoneAppButton"
                android:textColor="@color/primary_text" />
            <Button
                android:id="@+id/settingsButton"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_below="@id/openPhoneAppButton"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="15dp"
                android:background="@drawable/button_corners"
                android:onClick="openSettingsActivity"
                android:text="@string/buttonSettings"
                android:textColor="@color/primary_text" />
            <Button
                android:id="@+id/aboutButton"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:layout_below="@id/settingsButton"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_corners"
                android:onClick="openAboutActivity"
                android:text="@string/aboutButtonText"
                android:textColor="@color/primary_text" />


        </RelativeLayout>

    </ScrollView>






</RelativeLayout>






